<UserControl x:Class="ProductViewHierarchy.Controls.InterfaceResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProductViewHierarchy.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="InterfaceResult_Load">
    <GroupBox Header="InterfaceResult" FontWeight="Bold" Margin="5">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Program Row -->
            <TextBlock Text="Program:" VerticalAlignment="Center" Margin="5"/>
            <TextBox Grid.Column="1" Text="{Binding Program}" Margin="5" Width="200"/>
            <Button Grid.Column="2" Content="..."  Margin="5" Width="auto"/>

            <!-- Function Row -->
            <TextBlock Grid.Row="1" Text="Function:" VerticalAlignment="Center" Margin="5"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Function}" Margin="5"  Width="200"/>
            <Button Grid.Row="1" Grid.Column="2" Content="Test Call" Margin="5" Width="auto"/>
            <!-- String Row -->
            <TextBlock Grid.Row="2" Text="String:" VerticalAlignment="Center" Margin="5" Width="auto"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Param_String}" Margin="5" Width="200"/>

            <!-- Options Row -->
            <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="5">
                <CheckBox Content="Send Parameter" IsChecked="{Binding IsSendParameter}" VerticalAlignment="Center"/>
                <ComboBox Name="cmbListForSendParameter" Width="35" Height="20"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,0,0,0" SelectedValue="{Binding NumberOfSendParameters}">
                </ComboBox>
                <CheckBox Content="Call Style Return" VerticalAlignment="Center" Margin="10,0" IsChecked="{Binding CallStyleReturn}"/>
                <CheckBox Content="Is Gripper Side" VerticalAlignment="Center" Margin="10,0" IsChecked="{Binding IsGripperSide}"/>
                <CheckBox Content="Skip"  VerticalAlignment="Center" Width="auto" IsChecked="{Binding IsSkip}"/>
            </StackPanel>
        </Grid>
    </GroupBox>
</UserControl>
