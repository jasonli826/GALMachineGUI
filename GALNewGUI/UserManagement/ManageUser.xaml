<Window x:Class="GALNewGUI.UserManagement.ManageUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GALNewGUI.UserManagement"
        mc:Ignorable="d"
        Title="ManageUser" Height="520" Width="600">
        <Window.Background>
        <!-- Colorful Gradient Background -->
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#007ACC" Offset="0"/>
            <GradientStop Color="#FFD500" Offset="0.5"/>
            <GradientStop Color="#00C9FF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Window.Resources>
        <!-- Define Beautiful Styles -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Themes.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <TabControl Margin="20"
                    Background="Transparent"
                    BorderThickness="0">
            <TabItem Header="Add New User">
                <Grid Background="#FFE4B5">
                    <Border CornerRadius="12" Background="White" Padding="20" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <Grid Width="320">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Title -->
                            <TextBlock Text="Add New User" FontSize="22" FontWeight="Bold" Grid.ColumnSpan="2" Margin="0,0,0,20"/>

                            <!-- Username -->
                            <Label Content="Username:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Height="30" Background="#F0F0F0" Padding="5" Margin="0,0,0,10"/>

                            <!-- Password -->
                            <Label Content="Password:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <PasswordBox Grid.Row="2" Grid.Column="1" Height="30" Background="#F0F0F0" Padding="5" Margin="0,0,0,10"/>

                            <!-- Access Level -->
                            <Label Content="Access Level:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <ComboBox Grid.Row="3" Grid.Column="1" Height="30" Background="#F0F0F0" Padding="4" Margin="0,0,0,10">
                                <ComboBoxItem Content="Administrator"/>
                                <ComboBoxItem Content="Engineer"/>
                                <ComboBoxItem Content="Technician"/>
                                <ComboBoxItem Content="Operator"/>
                            </ComboBox>

                            <!-- Button -->
                            <Button Content="Add New User" Grid.Row="4" Grid.ColumnSpan="2" Height="35" Margin="0,10,0,0"
                        Background="#2D89EF" Foreground="White" FontWeight="Bold"
                        BorderBrush="#1A5DB3" BorderThickness="1"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>


            <TabItem Header="Delete User">
                <Grid Background="#FFB6C1">
                    <TextBlock Text="Delete User Page" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                </Grid>
            </TabItem>

            <TabItem Header="Change Password">
                <Grid Background="#AFEEEE">
                    <TextBlock Text="Change Password Page" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
