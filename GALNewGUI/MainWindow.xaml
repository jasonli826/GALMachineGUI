<Window x:Class="GALNewGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GALNewGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="2000" Width="1600">
    <Window.Resources>
        <!-- Define Beautiful Styles -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Themes.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <!-- Navigation Menu -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Left Column: Vertical Navigation Menu -->
        <!--<StackPanel Background="#333" Width="180" Grid.Column="0">

         -->
        <!-- Vertical Menu -->
        <!--
         <Menu Background="#333" Foreground="White" VerticalAlignment="Top">
             <MenuItem Header="Product" Style="{StaticResource SubMenuStyle}">
                 <MenuItem Header="Load Product" Style="{StaticResource SubMenuStyle}"/>
             </MenuItem>

             <MenuItem Header="User Management" Style="{StaticResource SubMenuStyle}">
                 <MenuItem Header="Login" Style="{StaticResource SubMenuStyle}"/>
                 <MenuItem Header="Logout" Style="{StaticResource SubMenuStyle}"/>
             </MenuItem>

             <MenuItem Header="Help" Style="{StaticResource SubMenuStyle}">
                 <MenuItem Header="About" Style="{StaticResource SubMenuStyle}"/>
                 <MenuItem Header="User Manual" Style="{StaticResource SubMenuStyle}"/>
             </MenuItem>
         </Menu>
     </StackPanel>-->

        <!-- Right Column: Main Content -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- First Row: Two GroupBoxes -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Header="Machine Operation" Grid.Column="0">
                    <GroupBox.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="PowderBlue"></GradientStop>
                            <GradientStop Offset="1" Color="Cornsilk"></GradientStop>
                        </LinearGradientBrush>
                    </GroupBox.Background>
                    <StackPanel>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <!--<Label Name="labelRobotConnection1" Content="Robot 1 Disconnected" Margin="5" Background="WhiteSmoke" Foreground="Red" FontSize="16" FontWeight="Bold" Width="210" Height="32" HorizontalContentAlignment="Center"></Label>-->
                            <Image Name="connectionStatusImage" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible" Width="100" Height="80">
                                <Image.Source>
                                    <BitmapImage UriSource="Images/RoboticNotConnected.png" />
                                </Image.Source>
                            </Image>
                            <Label Name="labelRobotConnection1" Content="Robot 1 Disconnected" Margin="5" Background="WhiteSmoke" Foreground="Red" FontSize="16" FontWeight="Bold" Width="210" Height="32" HorizontalContentAlignment="Center">
                            </Label>
                        </WrapPanel>
                        <WrapPanel Name="wrapMachineOperations">
                            <Button Name="buttonRun"  Style="{StaticResource ModernButton}" Margin="8" IsEnabled="True" ToolTip="Run">
                                <Image Source="Images/btnRun.png" Stretch="Fill"/>
                            </Button>
                            <Button Name="buttonStop" Style="{StaticResource stopButton}" Margin="8" IsEnabled="True">
                                <Image Source="Images/btnStop.png" Stretch="Fill"/>
                            </Button>
                            <Button Name="buttonLoadBatch" Style="{StaticResource ModernButton}"  Margin="8" Width="100">Load Batch</Button>
                            <CheckBox Name="checkboxDryRun" Margin="5" Background="WhiteSmoke" Foreground="Chocolate" FontSize="16" FontWeight="Bold" Width="100" VerticalAlignment="Center"  IsChecked="{Binding Path=IsDryRun}" Visibility="Collapsed">Dry Run</CheckBox>
                            <CheckBox Name="checkboxSelfRun" Margin="5" Background="WhiteSmoke" Foreground="Chocolate" FontSize="16" FontWeight="Bold" Width="100" VerticalAlignment="Center"  IsChecked="{Binding Path=IsSelfRun}" Visibility="Collapsed">Self Run</CheckBox>
                            <StackPanel Name="sp_sliderRobotSpeed" Orientation="Horizontal" Background="WhiteSmoke" Margin="5" Visibility="Collapsed">
                                <TextBlock VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="Chocolate" Margin="5">Robot Speed (%)</TextBlock>
                                <Slider Name="sliderRobotSpeed" VerticalAlignment="Center" Maximum="100" Minimum="10" TickPlacement="BottomRight" TickFrequency="10" Width="200" IsSnapToTickEnabled="True"  Value="{Binding Path=RobotSpeed}"></Slider>
                                <TextBox Text="{Binding ElementName=sliderRobotSpeed, Path=Value}" VerticalAlignment="Center" Margin="5"></TextBox>
                            </StackPanel>
                        </WrapPanel>
                        <WrapPanel>
                            <Label Name="labelproductfile" Content="Product File:" Margin="5,5,0,5" Background="WhiteSmoke" Foreground="Green" FontSize="16" FontWeight="Bold" Width="110" Height="32" HorizontalContentAlignment="Center"></Label>
                            <Label Name="txtProductName"  Content="C:\GAL\Product Files\NewProduct.xml" Margin="0,5,5,5" Background="WhiteSmoke" Foreground="Green" FontSize="16" FontWeight="Bold" Width="Auto" Height="32" HorizontalContentAlignment="Center">

                            </Label>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="SECS/GEM Operations" Grid.Column="1">
                    <GroupBox.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="PowderBlue"/>
                            <GradientStop Offset="1" Color="Cornsilk"/>
                        </LinearGradientBrush>
                    </GroupBox.Background>

                    <Grid Margin="10">
                        <!-- Define 4 Rows -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Define 4 Columns -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Row 1: Connection Status -->
                        <Label Content="Socket Status:" Grid.Row="0" Grid.Column="0" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Path=SocketStatus}" Grid.Row="0" Grid.Column="1" Foreground="Green" FontSize="16" FontWeight="Bold"/>

                        <Label Content="Host Comm Status:" Grid.Row="0" Grid.Column="2" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Path=CommStatus}" Grid.Row="0" Grid.Column="3" Foreground="Green" FontSize="16" FontWeight="Bold"/>

                        <!-- Row 2: Equipment Control -->
                        <Label Content="Control Status:" Grid.Row="1" Grid.Column="0" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Path=ControlStatus}" Grid.Row="1" Grid.Column="1" Foreground="Green" FontSize="16" FontWeight="Bold"/>

                        <Label Content="Process State:" Grid.Row="1" Grid.Column="2" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Path=ProcessState}" Grid.Row="1" Grid.Column="3" Foreground="Green" FontSize="16" FontWeight="Bold"/>

                        <!-- Row 3: PJ Status -->
                        <Label Content="PJ Status:" Grid.Row="2" Grid.Column="0" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Path=PJJobStatus}" Grid.Row="2" Grid.Column="1" Foreground="Green" FontSize="16" FontWeight="Bold"/>

                        <Label Content="PJ ID:" Grid.Row="2" Grid.Column="2" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Path=PJJobStatus}" Grid.Row="2" Grid.Column="3" Foreground="Green" FontSize="16" FontWeight="Bold"/>

                        <!-- Row 4: Buttons -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Name="buttonEqConnect" Style="{StaticResource ModernButton}" IsEnabled="{Binding Path=IsConnected}" Margin="5">Connect</Button>
                            <Button Name="buttonEqDisconnect" Style="{StaticResource stopButton}" Margin="5">Disconnect</Button>
                            <Button Name="buttonEqRemote" Style="{StaticResource stopButton}" IsEnabled="{Binding Path=IsRemote}" Margin="5">Remote</Button>
                            <Button Name="buttonEqLocal" Style="{StaticResource ModernButton}" IsEnabled="{Binding Path=IsLocal}" Margin="5">Local</Button>
                        </StackPanel>
                    </Grid>
                </GroupBox>

            </Grid>

            <!-- Second Row: Input Section & Log Display -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <!-- Ensures equal row heights for both sections -->
                    <RowDefinition Height="auto"/>
                    <!-- This row will automatically take equal height -->
                </Grid.RowDefinitions>

                <GroupBox Header="Batch Parameter" Grid.Column="0" Grid.Row="0">
                    <GroupBox.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="LightCyan"/>
                            <!-- Microsoft Blue -->
                            <GradientStop Offset="1" Color="Silver"/>
                            <!-- Soft Metallic Touch -->
                        </LinearGradientBrush>
                    </GroupBox.Background>
                    <Grid>
                        <!-- Define the Grid structure: 5 rows and 4 columns -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Row 1 -->
                        <Label Content="Reser No:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Width="150" Text="107005074"/>
                        <Label Content="Batch No:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="3" Width="150" Text="CBNGF2Q001"/>

                        <!-- Row 2 -->
                        <Label Content="Module:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Width="200" Text="New Product"/>
                        <Label Content="Prod Name:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="3" Width="200" Text="M5"/>

                        <!-- Row 3 -->
                        <Label Content="Prod Height:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Width="150" Text="2.15"/>
                        <Label Content="Prod Length:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="3" Width="150" Text="2"/>

                        <!-- Row 4 -->
                        <Label Content="Prod Width:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Width="150" Text="2"/>


                    </Grid>
                </GroupBox>


                <!-- Logs Section -->
                <GroupBox Header="Logs" Grid.Column="1" Grid.Row="0" Height="400">
                    <GroupBox.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="AliceBlue"></GradientStop>

                            <GradientStop Offset="1" Color="LemonChiffon"></GradientStop>
                        </LinearGradientBrush>
                    </GroupBox.Background>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="Log details go here..."/>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>
