<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Last Update on 29 Oct 2015; Author: Srinivas G-->
    <RadialGradientBrush RadiusX="1" RadiusY="5" GradientOrigin="0.5,0.3" x:Key="HighlightBackground">
        <GradientStop Color="White" Offset="0" />
        <GradientStop Color="Blue" Offset=".4" />
    </RadialGradientBrush>

    <RadialGradientBrush RadiusX="1" RadiusY="5" GradientOrigin="0.5,0.3" x:Key="PressedBackground">
        <GradientStop Color="White" Offset="0" />
        <GradientStop Color="Blue" Offset="1" />
    </RadialGradientBrush>

    <RadialGradientBrush RadiusX="1" RadiusY="1" GradientOrigin="0.5,0.5" x:Key="WhiteBlueRadialGradientBrush" >
        <GradientStop Color="WhiteSmoke" Offset="0" />
        <GradientStop Color="DodgerBlue" Offset=".6" />
        <GradientStop Color="Blue" Offset="1" />
    </RadialGradientBrush>

    <SolidColorBrush Color="Blue" x:Key="DefaultBackground"></SolidColorBrush>
    
    <SolidColorBrush Color="Gray" x:Key="DisabledBackground"></SolidColorBrush>

    <LinearGradientBrush x:Key="menubackground" StartPoint="0,0" EndPoint="0,1">     
        <GradientStop Color="DodgerBlue" Offset="0"></GradientStop>
        <GradientStop Color="Blue" Offset="1"></GradientStop>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="menuitembackground" StartPoint="0,0" EndPoint="0,1" >
        <GradientStop Color="DodgerBlue" Offset="0"></GradientStop>
        <GradientStop Color="DodgerBlue" Offset="1"></GradientStop>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="windowBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="DarkBlue"></GradientStop>
        <GradientStop Offset="0.7" Color="PowderBlue"></GradientStop>
        <GradientStop Offset="1" Color="PaleGreen"></GradientStop>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="linearGradientBrushVerticalIvory2PaleGreen" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="Ivory"></GradientStop>        
        <GradientStop Offset="1" Color="PaleGreen"></GradientStop>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="linearGradientBrushVerticalLimeToDeepPink" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="DodgerBlue"></GradientStop>
        <GradientStop Offset="1" Color="Green"></GradientStop>
    </LinearGradientBrush>

    <ImageBrush x:Key="imageBrush" ImageSource="/Images/blackwave.png" TileMode="Tile" Viewport="0,0,0.5,0.5"/>
    
    <!--menu control style-->
    <Style TargetType="Menu">
        <Style.Setters>
            <Setter Property="Background" Value="{StaticResource menubackground}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="White"/>            
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style TargetType="MenuItem">
        <Setter Property="Background" Value="{StaticResource menuitembackground}"/>
        <Setter Property="FontSize" Value="24"/>
        <!--<Setter Property="Foreground" Value="White"/>-->
        <Setter Property="Foreground" Value="{StaticResource linearGradientBrushVerticalIvory2PaleGreen}"/>
        <Setter Property="LayoutTransform">
            <Setter.Value>
                <ScaleTransform/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <!--background and foreground not woring for items-->
            <EventTrigger RoutedEvent="MenuItem.MouseEnter">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleX" To="1.2" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleY" To="1.2" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
            <EventTrigger RoutedEvent="MenuItem.MouseLeave">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleX" To="1" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="LayoutTransform.ScaleY" To="1" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <!--buttons-->
    <Style x:Key="redbutton" TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="DimGray"></GradientStop>
                    <GradientStop Offset=".3" Color="Black"></GradientStop>
                    <GradientStop Offset=".7" Color="Black"></GradientStop>
                    <GradientStop Offset="1" Color="Red"></GradientStop>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="Height" Value="40"></Setter>
        <Style.Triggers>
            <!--background and foreground not woring for items-->
            <EventTrigger RoutedEvent="Button.MouseEnter">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Width" To="110" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="Height" To="48" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
            <EventTrigger RoutedEvent="Button.MouseLeave">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Width" To="100" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="Height" To="40" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
        </Style.Triggers>
    </Style>    
    
    <Style BasedOn="{StaticResource redbutton}" x:Key="bluebutton" TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="DimGray"></GradientStop>
                    <GradientStop Offset=".3" Color="Black"></GradientStop>
                    <GradientStop Offset=".7" Color="Black"></GradientStop>
                    <GradientStop Offset="1" Color="DodgerBlue"></GradientStop>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style BasedOn="{StaticResource redbutton}" x:Key="yellowbutton" TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="DimGray"></GradientStop>
                    <GradientStop Offset="0.3" Color="Black"></GradientStop>
                    <GradientStop Offset=".7" Color="Black"></GradientStop>
                    <GradientStop Offset="1" Color="Yellow"></GradientStop>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource redbutton}" x:Key="greenbutton" TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="DimGray"></GradientStop>
                    <GradientStop Offset="0.3" Color="Black"></GradientStop>
                    <GradientStop Offset=".7" Color="Black"></GradientStop>
                    <GradientStop Offset="1" Color="Green"></GradientStop>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Label control-->
    <Style TargetType="Label">        
        <Setter Property="Foreground" Value="Black"></Setter>
        <Setter Property="Background" Value="White"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="Height" Value="30"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
    
    <!--Groupbox control-->
    <Style TargetType="GroupBox">
        <Setter Property="BorderBrush" Value="AliceBlue"></Setter>
        <Setter Property="BorderThickness" Value="2"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
        <Setter Property="Padding" Value="5"></Setter>
        <!--<Setter Property="Foreground" Value="DodgerBlue"></Setter>-->
        <Setter Property="Foreground" Value="{StaticResource linearGradientBrushVerticalLimeToDeepPink}"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
        <!--<Setter Property="FontStyle" Value="Italic"></Setter>-->        
    </Style> 
    
    <Style x:Key="datagridColHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource menubackground}"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="BorderBrush" Value="Blue"></Setter>
        <Setter Property="BorderThickness" Value="1"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
        <Setter Property="Height" Value="30"></Setter>
    </Style>

