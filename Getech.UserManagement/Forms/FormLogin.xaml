<Window x:Class="Getech.UserManagement.FormLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             Height="240" Width="300" WindowStartupLocation="CenterScreen" Title="Login">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/GetechTheme.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0" Color="DarkBlue"></GradientStop>
            <GradientStop Offset="0.7" Color="PowderBlue"></GradientStop>
            <GradientStop Offset="1" Color="PaleGreen"></GradientStop>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Height="200" Width="290">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"></RowDefinition>
            <RowDefinition Height="0.8*"></RowDefinition>
            <RowDefinition Height="1.2*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Foreground="White">User Name</TextBlock>
        <ComboBox Name="comboboxUser" Grid.Column="1" Grid.Row="0" Margin="10" FontSize="16" VerticalContentAlignment="Center"></ComboBox>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Foreground="White" Grid.Column="0" Grid.Row="1">Password</TextBlock>
        <PasswordBox Name="passwordBox" Grid.Column="1" Grid.Row="1" Margin="10" FontSize="16" VerticalContentAlignment="Center" KeyDown="passwordBox_KeyDown"></PasswordBox>
        <Button Name="buttonLogin" Style="{StaticResource bluebutton}" Grid.Column="0" Grid.Row="2" Margin="10" Click="buttonLogin_Click">Login</Button>
        <Button Name="buttonCancel" Style="{StaticResource bluebutton}" Grid.Column="1" Grid.Row="2" Margin="10" Click="buttonCancel_Click">Cancel</Button>    
    </Grid>
</Window>
