<Window x:Class="Getech.UserManagement.FormManageUsers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top" IsMainMenu="True" Name="menuMain">
            <MenuItem Header="Add User" Name="menuAddUser" Click="menuAddUser_Click"></MenuItem>
            <MenuItem Header="Delete User" Name="menuDeleteUser" Click="menuDeleteUser_Click"></MenuItem>
            <MenuItem Header="Change Password" Name="menuChangePwd" Click="menuChangePwd_Click"></MenuItem>
        </Menu>
        <Grid Name="gridClientArea"></Grid>
    </DockPanel>
</Window>
